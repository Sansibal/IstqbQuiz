@namespace IstqbQuiz.Client

@using Microsoft.AspNetCore.Components.Routing
@using IstqbQuiz.Client.Shared
@using Microsoft.JSInterop

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Seite nicht gefunden.</p>
        </LayoutView>
    </NotFound>
</Router>

@if (newVersionAvailable)
{
    <div class="alert alert-info d-flex justify-content-between align-items-center m-2">
        <span>Neue Version verfügbar!</span>
        <button class="btn btn-sm btn-primary" @onclick="ReloadApp">Jetzt aktualisieren</button>
    </div>
}

@code {
    private bool newVersionAvailable = false;

    [Inject] private IJSRuntime JS { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Übergibt .NET-Referenz an JS
            var objRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("registerForSWUpdate", objRef);
        }
    }

    [JSInvokable]
    public void OnNewVersionAvailable()
    {
        newVersionAvailable = true;
        StateHasChanged();
    }

    private async Task ReloadApp()
    {
        newVersionAvailable = false;
        // Seite neu laden, um neue Version zu holen
        await JS.InvokeVoidAsync("eval", "location.reload()");
    }
}
