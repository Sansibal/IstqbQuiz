@page "/quizctmat"
@using IstqbQuiz.Client.Services
@using IstqbQuiz.Shared.Services;
@using IstqbQuiz.Shared.Models
@using IstqbQuiz.Shared.Utils;
@inject QuizState State
@inject QuestionService QuestionService
@inject NavigationManager Nav

<h3 class="mb-4">ISTQB CT-MAT Quiz</h3>

@if (!quizStarted)
{
    <!-- Start-Button, wenn das Quiz noch nicht begonnen hat -->
    <button class="btn btn-primary btn-lg" @onclick="StartQuiz">Start (40 Fragen)</button>
}
else if (loading)
{
    <!-- Ladeanzeige, während die Fragen geladen werden -->
    <div class="alert alert-info">Fragen werden geladen...</div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <!-- Fehlermeldung, falls beim Laden etwas schief geht -->
    <div class="alert alert-danger">Ein Fehler ist aufgetreten: @errorMessage</div>
}
else if (State.Questions.Count == 0)
{
    <!-- Fallback, falls gar keine Fragen im State sind -->
    <div class="alert alert-warning">Keine Fragen gefunden (prüfe Server/Data/questions_ctmat.json).</div>
}
else if (currentIndex < State.Questions.Count)
{
    <!-- =====================
         Laufendes Quiz (UI)
         ===================== -->
    <p class="fw-bold mb-3">
        Frage @(@currentIndex + 1) / @State.Questions.Count
    </p>

    <!-- Frage -->
    <div class="question-text mb-3">
        @((MarkupString)ToMarkup(State.Questions[currentIndex].Text))
    </div>

    <!-- Diagramm (optional, responsive eingebunden) -->
    @if (!string.IsNullOrEmpty(State.Questions[currentIndex].Diagram))
    {
        <div class="text-center mb-3">
            <img src="@State.Questions[currentIndex].Diagram"
                 alt="Diagramm"
                 class="img-fluid rounded shadow-sm" />
        </div>
    }

    <!-- Tabelle (optional) -->
    @if (State.Questions[currentIndex]?.Table?.Count > 0)
    {
        <div class="table-responsive mb-3">
            <table class="table table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        @foreach (var col in State.Questions[currentIndex].Table[0].Keys)
                        {
                            <th>@col</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in State.Questions[currentIndex].Table)
                    {
                        <tr>
                            @foreach (var val in row.Values)
                            {
                                <td>@val</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- PostText (z. B. Zusatzinfos unterhalb einer Frage) -->
    @if (!string.IsNullOrEmpty(State.Questions[currentIndex].PostText))
    {
        <div class="alert alert-secondary">
            @((MarkupString)ToMarkup(State.Questions[currentIndex].PostText))
        </div>
    }

    <!-- Antwort-Optionen (Buttons statt Checkboxes) -->
    <div class="d-grid gap-2 mt-3">
        @for (int i = 0; i < State.Questions[currentIndex].Options.Count; i++)
        {
            var localIdx = i;
            var isSelected = State.Answers[currentIndex].Contains(localIdx);

            <button class="btn @(isSelected ? "btn-primary" : "btn-outline-secondary") text-start"
                    @onclick="() => ToggleAnswer(localIdx)">
                <strong>@(Convert.ToChar('A' + i)).</strong> @State.Questions[currentIndex].Options[i]
            </button>
        }
    </div>

    <!-- Navigation (Vor/Zurück/Weiter) -->
    <div class="d-flex justify-content-between mt-4">
        <button class="btn btn-outline-primary"
                @onclick="Prev"
                disabled="@(currentIndex == 0)">
            Zurück
        </button>

        <button class="btn btn-primary"
                @onclick="Next"
                disabled="@(State.Answers[currentIndex].Count == 0)">
            Weiter
        </button>
    </div>
}
else
{
    <!-- Abschlussanzeige, bevor das Ergebnis berechnet wird -->
    <p>Berechne Ergebnis...</p>
}

@code {
    // =========================
    // Lokale Zustandsvariablen
    // =========================
    bool quizStarted = false;     // Steuert, ob das Quiz läuft oder nicht
    bool loading = false;         // Ladezustand, während die Fragen geholt werden
    string errorMessage = string.Empty; // Fehlermeldungen (falls beim Laden etwas schief geht)
    int currentIndex = 0;         // Index der aktuellen Frage (0-basiert)

    // =========================
    // Quiz starten
    // =========================
    async Task StartQuiz()
    {
        quizStarted = true;
        loading = true;
        errorMessage = string.Empty;
        State.Clear(); // reset: Fragen, Antworten, Score zurücksetzen

        // ✅ Merker: wir sind im CT-MAT Quiz
        State.IsAdvancedQuiz = false;

        State.Category = "ctmat";

        try
        {
            // Hole 40 zufällige Fragen aus der Kategorie "ctmat"
            var list = await QuestionService.GetRandomAsync(40, "ctmat");
            if (list == null || list.Count == 0)
            {
                errorMessage = "Keine Fragen gefunden.";
                State.Questions = new List<QuestionDto>();
            }
            else
            {
                // Fragen in den globalen State (QuizState) übernehmen
                State.Questions = list.Select(q => new QuestionDto
                {
                    Id = q.Id,
                    Text = q.Text,
                    Options = q.Options,
                    CorrectIndexes = q.CorrectIndexes,
                    Explanation = q.Explanation,   // ✅ passt jetzt zur JSON
                    Explanation2 = q.Explanation2, // ✅ zweite Erklärung optional
                    Diagram = q.Diagram,
                    Table = q.Table,
                    PostText = q.PostText
                }).ToList();

                // Für jede Frage eine leere Liste vorbereiten (User-Antworten)
                State.Answers = Enumerable.Range(0, State.Questions.Count)
                                          .Select(_ => new List<int>())
                                          .ToList();
            }
        }
        catch (Exception ex)
        {
            // Fehler (z. B. Datei nicht gefunden oder JSON kaputt)
            errorMessage = ex.Message;
        }
        finally
        {
            loading = false;
            currentIndex = 0; // Quiz immer bei erster Frage starten
        }
    }

    // =========================
    // Antwort toggeln (Mehrfach möglich)
    // =========================
    void ToggleAnswer(int idx)
    {
        if (currentIndex < 0 || currentIndex >= State.Questions.Count) return;

        var answers = State.Answers[currentIndex];
        if (answers.Contains(idx))
            answers.Remove(idx);  // Klick auf bereits gewählte Option -> abwählen
        else
            answers.Add(idx);     // Neue Option wählen
    }

    // =========================
    // Navigation
    // =========================
    void Next()
    {
        if (currentIndex < State.Questions.Count - 1)
            currentIndex++;  // zur nächsten Frage
        else
            Finish();        // Ende erreicht -> Ergebnis berechnen
    }

    void Prev() => currentIndex = Math.Max(0, currentIndex - 1); // zur vorherigen Frage

    // =========================
    // Ergebnis berechnen
    // =========================
    void Finish()
    {
        var questions = State.Questions;
        var answers = State.Answers;

        // ✅ Mappen: QuestionDto -> Question, damit es mit QuizHelper kompatibel ist
        var mappedQuestions = questions.Select(q => new Question
        {
            Id = q.Id,
            Text = q.Text,
            Options = q.Options,
            CorrectIndexes = q.CorrectIndexes,
            Explanation = q.Explanation,
            Explanation2 = q.Explanation2,
            Diagram = q.Diagram,
            Table = q.Table,
            PostText = q.PostText,
            PreText = q.PreText
        }).ToList();

        // ✅ Score berechnen über den zentralen Helper
        State.Score = QuizHelper.Score(mappedQuestions, answers);

        // ✅ Weiterleiten auf die Ergebnisseite
        Nav.NavigateTo("result");
    }

    // =========================
    // Hilfsfunktion: Text als HTML
    // - Wandelt Zeilenumbrüche (\r\n, \n) in <br> um
    // - Dekodiert HTML Entities (&lt; -> <)
    // =========================
    string ToMarkup(string? s)
    {
        var text = s ?? string.Empty;
        text = System.Net.WebUtility.HtmlDecode(text);
        text = text.Replace("\r\n", "<br>").Replace("\n", "<br>");
        return text;
    }
}
