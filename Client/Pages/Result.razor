@page "/result"
@inject IstqbQuiz.Client.Services.QuizState State
@inject NavigationManager Nav

<h3>Dein Ergebnis</h3>

@if (State.Questions != null && State.Questions.Count > 0)
{
    <p><strong>Punkte:</strong> @State.Score / @State.Questions.Count</p>

    @if (State.IsAdvancedQuiz)
    {
        <!-- ✅ Advanced-Quiz -->
        <div class="alert alert-secondary d-flex align-items-center mb-2">
            <i class="bi bi-sliders me-2"></i>
            <span>
                <strong>Hinweis:</strong> Dieses Ergebnis stammt aus dem <em>Advanced-Quiz</em>.
            </span>
        </div>
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2"></i>
            <span>
                <strong>Ergebnis:</strong> Du hast @State.Score von @State.Questions.Count Punkten erreicht.
            </span>
        </div>
    }
    else if (State.Category == "ctmat")
    {
        <!-- ✅ CT-MAT-Quiz -->
        <div class="alert alert-warning d-flex align-items-center mb-2">
            <i class="bi bi-journal-code me-2"></i>
            <span>
                <strong>Hinweis:</strong> Dieses Ergebnis stammt aus dem <em>CT-MAT Quiz</em>.
            </span>
        </div>
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2"></i>
            <span>
                <strong>Ergebnis:</strong> Du hast @State.Score von @State.Questions.Count Punkten erreicht.
            </span>
        </div>
    }
    else if (State.Category == "ctfl")
    {
        <!-- ✅ CTFL-Quiz -->
        <div class="alert alert-info d-flex align-items-center mb-2">
            <i class="bi bi-journal-text me-2"></i>
            <span>
                <strong>Hinweis:</strong> Dieses Ergebnis stammt aus dem <em>CTFL Quiz</em>.
            </span>
        </div>

        @if (State.Score >= 26)
        {
            <div class="alert alert-success d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-2"></i>
                <span>
                    <strong>Glückwunsch!</strong> Du hast bestanden.
                </span>
            </div>
        }
        else
        {
            <div class="alert alert-danger d-flex align-items-center">
                <i class="bi bi-x-circle-fill me-2"></i>
                <span>
                    <strong>Nicht bestanden.</strong> Du brauchst mindestens 26 Punkte.
                </span>
            </div>
        }
    }

    <div class="mt-2">
        <button class="btn btn-primary me-2" @onclick="StartNew">Neues Quiz starten</button>
        <button class="btn btn-secondary" @onclick="ShowDetails">Details anzeigen</button>
    </div>
}
else
{
    <p>Keine Daten gefunden. Bitte starte zuerst ein Quiz.</p>
}

@code {
    void StartNew()
    {
        if (State.IsAdvancedQuiz)
            Nav.NavigateTo("quizadvanced");
        else if (State.Category == "ctmat")
            Nav.NavigateTo("quizctmat");
        else
            Nav.NavigateTo("quiz"); // Default = CTFL
    }

    void ShowDetails() => Nav.NavigateTo("details");
}