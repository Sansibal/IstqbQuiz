@page "/debugquiz"
@using IstqbQuiz.Client.Services
@using IstqbQuiz.Shared.Models
@using IstqbQuiz.Shared.Utils
@inject QuizState State
@inject QuestionService QuestionService
@inject NavigationManager Nav

<h3 class="mb-4">Debug-Quiz</h3>

@if (!quizStarted)
{
    <!-- Eingabeformular für Debug-Quiz -->
    <div class="card shadow-sm p-4 mb-4">
        <div class="mb-3">
            <label for="count" class="form-label">Anzahl Fragen</label>
            <input id="count" type="number" class="form-control"
                   @bind="questionCount" min="1" max="999" />
        </div>

        <div class="mb-3">
            <label for="minId" class="form-label">Minimale ID (optional)</label>
            <input id="minId" type="number" class="form-control"
                   @bind="minId" />
        </div>

        <div class="mb-3">
            <label for="maxId" class="form-label">Maximale ID (optional)</label>
            <input id="maxId" type="number" class="form-control"
                   @bind="maxId" />
        </div>

        <div class="form-check mb-3">
            <input id="shuffle" type="checkbox" class="form-check-input"
                   @bind="shuffle" />
            <label for="shuffle" class="form-check-label">Fragen mischen</label>
        </div>

        <button class="btn btn-primary" @onclick="StartQuiz">Quiz starten</button>
    </div>
}
else if (loading)
{
    <!-- Ladeanzeige -->
    <div class="alert alert-info">Fragen werden geladen...</div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <!-- Fehleranzeige -->
    <div class="alert alert-danger">Ein Fehler ist aufgetreten: @errorMessage</div>
}
else if (State.Questions.Count == 0)
{
    <!-- Falls keine Fragen gefunden -->
    <div class="alert alert-warning">Keine Fragen gefunden (prüfe Filter oder Fragenpool).</div>
}
else if (currentIndex < State.Questions.Count)
{
    <!-- Aktuelle Frage-Anzeige -->
    <p class="fw-bold mb-3">
        Frage @(@currentIndex + 1) / @State.Questions.Count
    </p>

    <!-- Fragetext -->
    <div class="question-text mb-3">
        @((MarkupString)ToMarkup(State.Questions[currentIndex].Text))
    </div>

    <!-- Diagramm -->
    @if (!string.IsNullOrEmpty(State.Questions[currentIndex].Diagram))
    {
        <div class="text-center mb-3">
            <img src="@State.Questions[currentIndex].Diagram"
                 alt="Diagramm"
                 class="img-fluid rounded shadow-sm" />
        </div>
    }

    <!-- Tabelle -->
    @if (State.Questions[currentIndex]?.Table?.Count > 0)
    {
        <div class="table-responsive mb-3">
            <table class="table table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        @foreach (var col in State.Questions[currentIndex].Table[0].Keys)
                        {
                            <th>@col</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in State.Questions[currentIndex].Table)
                    {
                        <tr>
                            @foreach (var val in row.Values)
                            {
                                <td>@val</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- PostText -->
    @if (!string.IsNullOrEmpty(State.Questions[currentIndex].PostText))
    {
        <div class="alert alert-secondary">
            @((MarkupString)ToMarkup(State.Questions[currentIndex].PostText))
        </div>
    }

    <!-- Antwortmöglichkeiten -->
    <div class="d-grid gap-2 mt-3">
        @for (int i = 0; i < State.Questions[currentIndex].Options.Count; i++)
        {
            var localIdx = i;
            var isSelected = State.Answers[currentIndex].Contains(localIdx);

            <button class="btn @(isSelected ? "btn-primary" : "btn-outline-secondary") text-start"
                    @onclick="() => ToggleAnswer(localIdx)">
                <strong>@(Convert.ToChar('A' + i)).</strong> @State.Questions[currentIndex].Options[i]
            </button>
        }
    </div>

    <!-- Navigation -->
    <div class="d-flex justify-content-between mt-4">
        <button class="btn btn-outline-primary"
                @onclick="Prev"
                disabled="@(currentIndex == 0)">
            Zurück
        </button>

        <button class="btn btn-primary"
                @onclick="Next"
                disabled="@(State.Answers[currentIndex].Count == 0)">
            Weiter
        </button>
    </div>
}
else
{
    <!-- Am Ende des Quiz -->
    <p>Berechne Ergebnis...</p>
}

@code {
    // ✅ Lokale Felder für Debug-Formular
    private int questionCount = 10;   // Standardwert
    private int? minId;
    private int? maxId;
    private bool shuffle = false;

    // ✅ State
    bool quizStarted = false;
    bool loading = false;
    string errorMessage = string.Empty;
    int currentIndex = 0;

   // Quiz starten (Debug-Modus)
    async Task StartQuiz()
    {
        quizStarted = true;
        loading = true;
        errorMessage = string.Empty;
        State.Clear();

        try
        {
            // Fragen über Debug-Service laden (inkl. Filter)
            var list = await QuestionService.GetDebugQuizAsync(
                count: questionCount,
                minId: minId,
                maxId: maxId,
                shuffle: shuffle,
                category: "ctfl"   // ✅ explizit CTFL
            );

            if (list == null || list.Count == 0)
            {
                errorMessage = "Keine Fragen gefunden.";
                State.Questions = new List<QuestionDto>();
            }
            else
            {
                // Fragen in State mappen
                State.Questions = list.Select(q => new QuestionDto
                {
                    Id = q.Id,
                    Text = q.Text,
                    Options = q.Options,
                    CorrectIndexes = q.CorrectIndexes,
                    Explanation = q.Explanation,
                    Explanation2 = q.Explanation2,
                    Diagram = q.Diagram,
                    Table = q.Table,
                    PostText = q.PostText
                }).ToList();

                // Antworten initialisieren
                State.Answers = Enumerable.Range(0, State.Questions.Count)
                                        .Select(_ => new List<int>())
                                        .ToList();
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            loading = false;
            currentIndex = 0;
        }
    }


    // Antwort toggeln (mehrfach möglich)
    void ToggleAnswer(int idx)
    {
        if (currentIndex < 0 || currentIndex >= State.Questions.Count) return;

        var answers = State.Answers[currentIndex];
        if (answers.Contains(idx))
            answers.Remove(idx);
        else
            answers.Add(idx);
    }

    // Navigation
    void Next()
    {
        if (currentIndex < State.Questions.Count - 1) currentIndex++;
        else Finish();
    }

    void Prev() => currentIndex = Math.Max(0, currentIndex - 1);

    // Am Ende -> Ergebnis berechnen
    void Finish()
    {
        var mappedQuestions = State.Questions.Select(q => new Question
        {
            Id = q.Id,
            Text = q.Text,
            Options = q.Options,
            CorrectIndexes = q.CorrectIndexes,
            Explanation = q.Explanation,
            Explanation2 = q.Explanation2,
            Diagram = q.Diagram,
            Table = q.Table,
            PostText = q.PostText,
            PreText = q.PreText
        }).ToList();

        // Score berechnen
        State.Score = QuizHelper.Score(mappedQuestions, State.Answers);

        // Weiter zur Ergebnisseite
        Nav.NavigateTo("result");
    }

    // Hilfsmethode: Text korrekt anzeigen mit Umbrüchen
    string ToMarkup(string? s)
    {
        var text = s ?? string.Empty;
        text = System.Net.WebUtility.HtmlDecode(text);
        text = text.Replace("\r\n", "<br>").Replace("\n", "<br>");
        return text;
    }
}
