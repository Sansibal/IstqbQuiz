<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- PWA und Service Worker Konfiguration -->
    <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
    <BlazorEnableCompression>true</BlazorEnableCompression>
    <PublishTrimmed>false</PublishTrimmed> <!-- Verhindert Probleme mit PWA -->
    <BlazorWebAssemblyEnableLinking>true</BlazorWebAssemblyEnableLinking>
    <StaticWebAssetBasePath>/</StaticWebAssetBasePath>

    <!-- Optional: Versionierung fÃ¼r PWA -->
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core Blazor WebAssembly -->
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.0" />
    
    <!-- PWA Support -->
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.0" PrivateAssets="all" />

    <!-- Projekt-Referenzen -->
    <ProjectReference Include="..\Shared\IstqbQuiz.Shared.csproj" />
  </ItemGroup>
</Project>
